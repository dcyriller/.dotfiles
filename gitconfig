[color]
	ui = true
[merge]
	tool = vim
[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	co = checkout
	ctags = !.git/hooks/ctags
	st = status
	ci = commit -v
	ca = commit --amend
[credential]
	helper = osxkeychain
[push]
	default = matching
[init]
	; templatedir = ~/.git_template
[core]
	editor = vim
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
